@{
    ViewData["Title"] = "CTMS";
}
<header class="header">
  <label>Welcome, Guest (admin)</label>
  <a class="btn" asp-controller="Home" asp-action="Index">Log Out</a>
</header>

<div class="ctms-title"><h1>CTMS</h1></div>

<div class="admin-panel">
  <button id="adminViewUsersBtn" class="btn">View Users</button><span></span>
  <button id="adminCreateStudyBtn" class="btn">Create Study</button>
</div>

<main class="main-ctms">
  <table>
    <thead>
      <tr>
        <th>Study Name</th>
        <th>Region</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  <div class="no-studies-wrap"><label>(there are no studies to display)</label></div>
</main>

<section id="userModal" class="modal-layer">
  <div class="user-background">
    <div class="user-title-wrap">
      <h2 class="margin-reset">Users</h2>
    </div>
    <ul>
      <li>Gabriel Fernandes (admin)</li>
      <li>user</li>
      <li>user</li>
      <li>user</li>
      <li>user</li>
    </ul>
    <div class="btn-wrap"><button id="userBackBtn" class="btn">Back</button></div>
  </div>
</section>

<section id="createModal" class="modal-layer">
  <div class="create-background">

    <div class="create-modal-space"></div>

    <div class="create-title-wrap">
      <h2 class="margin-reset">Create Study</h2>
    </div>
    
    <div class="create-input-wrap">
      <div class="create-input-section">
        <input id="createStudyName" placeholder="study name">
        <input id="createRegion" placeholder="region">
        <div id="createError" class="create-input-dates">
          <label>Start Date&nbsp;&nbsp;<br><input id="createStartDate" type="date"></label>
          <label>End Date&nbsp;&nbsp;<br><input id="createEndDate" type="date"></label>
        </div>
      </div>
      <div class="create-input-section">
        <textarea id="createDescription" placeholder="description"></textarea>
      </div>
    </div>

    <div class="btn-wrap">
      <button id="createCreateBtn" class="btn">Create</button><span></span>
      <button id="createBackBtn" class="btn">Back</button>
    </div>

    <div class="create-modal-space"></div>

  </div>
</section>